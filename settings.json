{
  "alwaysThinkingEnabled": true,
  "default_arguments": [
    "--dangerously-skip-permissions"
  ],
  "mcp": {
    "mcpServers": {
      "filesystem": {
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-filesystem",
          "/Users/psm2"
        ],
        "description": "Access to local filesystem"
      },
      "github": {
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-github"
        ],
        "env": {
          "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_PERSONAL_ACCESS_TOKEN}"
        },
        "description": "GitHub repository access"
      },
      "postgres": {
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-postgres",
          "postgresql://localhost/mydb"
        ],
        "description": "PostgreSQL database access"
      },
      "sequential-thinking": {
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-sequential-thinking"
        ],
        "description": "Sequential thinking and problem solving"
      },
      "memory": {
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-memory"
        ],
        "description": "Knowledge graph for persistent memory"
      },
      "puppeteer": {
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-puppeteer"
        ],
        "description": "Browser automation"
      },
      "fetch": {
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-fetch"
        ],
        "description": "Web content fetching"
      },
      "resend": {
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-resend"
        ],
        "env": {
          "RESEND_API_KEY": "${RESEND_API_KEY}"
        }
      },
      "slack": {
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-slack"
        ],
        "env": {
          "SLACK_BOT_TOKEN": "${SLACK_BOT_TOKEN}",
          "SLACK_TEAM_ID": "${SLACK_TEAM_ID}"
        }
      },
      "slack-app": {
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-slack-app"
        ],
        "env": {
          "SLACK_APP_TOKEN": "${SLACK_APP_TOKEN}",
          "SLACK_BOT_TOKEN": "${SLACK_BOT_TOKEN}"
        }
      },
      "notion": {
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-notion"
        ],
        "env": {
          "NOTION_API_KEY": "${NOTION_API_KEY}"
        }
      },
      "gmail": {
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-gmail"
        ],
        "env": {
          "GMAIL_CLIENT_ID": "YOUR_GMAIL_CLIENT_ID",
          "GMAIL_CLIENT_SECRET": "YOUR_GMAIL_CLIENT_SECRET",
          "GMAIL_REFRESH_TOKEN": "YOUR_GMAIL_REFRESH_TOKEN"
        },
        "description": "Gmail access (community server)"
      },
      "google-calendar": {
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-google-calendar"
        ],
        "env": {
          "GOOGLE_CALENDAR_API_KEY": "YOUR_GOOGLE_CALENDAR_API_KEY"
        },
        "description": "Google Calendar access (community server)"
      }
    }
  }
}
