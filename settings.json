{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "git-autosave > /tmp/git-autosave.log 2>&1 &"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "agent-sdk-dev@claude-code-plugins": true
  },
  "alwaysThinkingEnabled": false,
  "default_arguments": [
    "--dangerously-skip-permissions"
  ],
  "mcp": {
    "mcpServers": {
      "filesystem": {
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-filesystem",
          "$HOME"
        ],
        "description": "Access to local filesystem"
      },
      "sequential-thinking": {
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-sequential-thinking"
        ],
        "description": "Sequential thinking and problem solving"
      },
      "memory": {
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-memory"
        ],
        "description": "Knowledge graph for persistent memory"
      },
      "playwright": {
        "command": "npx",
        "args": [
          "-y",
          "@anthropic/mcp-playwright"
        ],
        "description": "Browser automation with Playwright"
      },
      "puppeteer": {
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-puppeteer"
        ],
        "description": "Browser automation"
      },
      "fetch": {
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-fetch"
        ],
        "description": "Web content fetching"
      },
      "git": {
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-git"
        ],
        "description": "Git repository operations"
      },
      "github": {
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-github"
        ],
        "env": {
          "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
        },
        "description": "GitHub API integration"
      },
      "brave-search": {
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-brave-search"
        ],
        "env": {
          "BRAVE_API_KEY": "${BRAVE_API_KEY}"
        },
        "description": "Web search via Brave"
      },
      "postgres": {
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-postgres",
          "${DATABASE_URL:-postgresql://localhost/mydb}"
        ],
        "description": "PostgreSQL database access"
      },
      "resend": {
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-resend"
        ],
        "env": {
          "RESEND_API_KEY": "${RESEND_API_KEY}"
        },
        "description": "Email sending via Resend"
      },
      "slack": {
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-slack"
        ],
        "env": {
          "SLACK_BOT_TOKEN": "${SLACK_BOT_TOKEN}",
          "SLACK_TEAM_ID": "${SLACK_TEAM_ID}"
        },
        "description": "Slack integration"
      },
      "notion": {
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-notion"
        ],
        "env": {
          "NOTION_API_KEY": "${NOTION_API_KEY}"
        },
        "description": "Notion integration"
      }
    }
  }
}
