{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "git-autosave > /tmp/git-autosave.log 2>&1 &",
            "timeout": 5000
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '\"\\(.tool_input.command) - \\(.tool_input.description // \"No description\")\"' >> ~/.claude/bash-command-log.txt"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/format-file.sh",
            "timeout": 10000
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"Claude needs your input\" with title \"Claude Code\" sound name \"Ping\"'",
            "timeout": 3000
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"Task completed\" with title \"Claude Code\" sound name \"Glass\"'"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/session-end.sh"
          },
          {
            "type": "command",
            "command": "cp \"$HOME/Library/Mobile Documents/com~apple~CloudDocs/Claude/memory.jsonl\" \"$HOME/.claude/backups/memory-$(date +%Y%m%d-%H%M%S).jsonl\" 2>/dev/null || true",
            "timeout": 5000
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/pre-compact.sh"
          }
        ]
      }
    ],
    "SubagentStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "HOOK_TYPE=SubagentStart $HOME/.claude/hooks/subagent-activity.sh"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "HOOK_TYPE=SubagentStop $HOME/.claude/hooks/subagent-activity.sh"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "frontend-design@claude-plugins-official": true,
    "context7@claude-plugins-official": true,
    "code-review@claude-plugins-official": true,
    "supabase@claude-plugins-official": true,
    "ralph-wiggum@claude-plugins-official": true,
    "code-simplifier@claude-plugins-official": true,
    "document-skills@anthropic-agent-skills": true
  },
  "alwaysThinkingEnabled": false,
  "default_arguments": ["--dangerously-skip-permissions"],
  "mcp": {
    "mcpServers": {
      "sequential-thinking": {
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"],
        "description": "Sequential thinking and problem solving"
      },
      "memory": {
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-memory"],
        "env": {
          "MEMORY_FILE_PATH": "/Users/ps/Library/Mobile Documents/com~apple~CloudDocs/Claude/memory.jsonl"
        },
        "description": "Knowledge graph for persistent memory (iCloud synced)"
      },
      "fetch": {
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-fetch"],
        "description": "Web content fetching"
      },
      "git": {
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-git"],
        "description": "Git repository operations"
      },
      "brave-search": {
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-brave-search"],
        "env": {
          "BRAVE_API_KEY": "${BRAVE_API_KEY}"
        },
        "description": "Web search via Brave"
      },
      "postgres": {
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-postgres",
          "${DATABASE_URL:-postgresql://localhost/mydb}"
        ],
        "description": "PostgreSQL database access"
      },
      "resend": {
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-resend"],
        "env": {
          "RESEND_API_KEY": "${RESEND_API_KEY}"
        },
        "description": "Email sending via Resend"
      },
      "slack": {
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-slack"],
        "env": {
          "SLACK_BOT_TOKEN": "${SLACK_BOT_TOKEN}",
          "SLACK_TEAM_ID": "${SLACK_TEAM_ID}"
        },
        "description": "Slack integration"
      },
      "notion": {
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-notion"],
        "env": {
          "NOTION_API_KEY": "${NOTION_API_KEY}"
        },
        "description": "Notion integration"
      },
      "chrome-devtools": {
        "command": "npx",
        "args": ["-y", "@anthropic/mcp-chrome-devtools"],
        "description": "Browser automation and testing via Chrome DevTools"
      }
    }
  }
}
