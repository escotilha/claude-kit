{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "git-autosave > /tmp/git-autosave.log 2>&1 &"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '\"\\(.tool_input.command) - \\(.tool_input.description // \"No description\")\"' >> ~/.claude/bash-command-log.txt"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/format-file.sh"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"Claude needs your input\" with title \"Claude Code\" sound name \"Ping\"'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"Task completed\" with title \"Claude Code\" sound name \"Glass\"'"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "frontend-design@claude-plugins-official": true,
    "context7@claude-plugins-official": true,
    "code-review@claude-plugins-official": true,
    "supabase@claude-plugins-official": true,
    "ralph-wiggum@claude-plugins-official": true,
    "code-simplifier@claude-plugins-official": true
  },
  "alwaysThinkingEnabled": false,
  "default_arguments": [
    "--dangerously-skip-permissions"
  ],
  "mcp": {
    "mcpServers": {
      "sequential-thinking": {
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-sequential-thinking"
        ],
        "description": "Sequential thinking and problem solving"
      },
      "memory": {
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-memory"
        ],
        "env": {
          "MEMORY_FILE_PATH": "/Users/ps/Library/Mobile Documents/com~apple~CloudDocs/Claude/memory.jsonl"
        },
        "description": "Knowledge graph for persistent memory (iCloud synced)"
      },
      "fetch": {
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-fetch"
        ],
        "description": "Web content fetching"
      },
      "git": {
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-git"
        ],
        "description": "Git repository operations"
      },
      "brave-search": {
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-brave-search"
        ],
        "env": {
          "BRAVE_API_KEY": "${BRAVE_API_KEY}"
        },
        "description": "Web search via Brave"
      },
      "postgres": {
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-postgres",
          "${DATABASE_URL:-postgresql://localhost/mydb}"
        ],
        "description": "PostgreSQL database access"
      },
      "resend": {
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-resend"
        ],
        "env": {
          "RESEND_API_KEY": "${RESEND_API_KEY}"
        },
        "description": "Email sending via Resend"
      },
      "slack": {
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-slack"
        ],
        "env": {
          "SLACK_BOT_TOKEN": "${SLACK_BOT_TOKEN}",
          "SLACK_TEAM_ID": "${SLACK_TEAM_ID}"
        },
        "description": "Slack integration"
      },
      "notion": {
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-notion"
        ],
        "env": {
          "NOTION_API_KEY": "${NOTION_API_KEY}"
        },
        "description": "Notion integration"
      }
    }
  }
}
