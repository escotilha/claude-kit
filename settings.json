{
  "hooks": {
    "SessionStart": [
      {
        "type": "command",
        "command": "git-autosave > /tmp/git-autosave.log 2>&1 &"
      },
      {
        "type": "command",
        "command": "echo '=== CORE MEMORY ===' && cat \"$HOME/Library/Mobile Documents/com~apple~CloudDocs/claude-setup/memory/core-memory.json\" 2>/dev/null || echo 'No core memory found'"
      }
    ],
    "SubagentStop": [
      {
        "type": "command",
        "command": "rm -rf /tmp/claude-agent-* 2>/dev/null || true"
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|NotebookEdit",
        "type": "command",
        "command": "\"$HOME/Library/Mobile Documents/com~apple~CloudDocs/claude-setup/hooks/format-file.sh\""
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "type": "command",
        "command": "echo '{\"additionalContext\": \"Working directory: '$(pwd)'. Git branch: '$(git branch --show-current 2>/dev/null || echo none)'. Project: '$(basename $(git rev-parse --show-toplevel 2>/dev/null) 2>/dev/null || basename $(pwd))'\"}'"
      }
    ],
    "Stop": [
      {
        "type": "prompt",
        "prompt": "Before ending: If you made code changes, did you verify they compile/pass tests? If not, consider running /verify."
      },
      {
        "type": "command",
        "command": "\"$HOME/Library/Mobile Documents/com~apple~CloudDocs/claude-setup/hooks/session-end.sh\""
      }
    ]
  },
  "alwaysThinkingEnabled": false,
  "plansDirectory": "~/Library/Mobile Documents/com~apple~CloudDocs/claude-setup/plans",
  "mcpSearchAutoThreshold": 15,
  "default_arguments": ["--dangerously-skip-permissions"],
  "mcp": {
    "mcpServers": {
      "sequential-thinking": {
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"],
        "description": "Sequential thinking and problem solving"
      },
      "memory": {
        "command": "node",
        "args": [
          "$HOME/Library/Mobile Documents/com~apple~CloudDocs/claude-setup/mcp-servers/memory-turso/dist/index.js"
        ],
        "env": {
          "TURSO_DATABASE_URL": "libsql://claude-memory-escotilha.aws-us-east-1.turso.io",
          "TURSO_AUTH_TOKEN": "eyJhbGciOiJFZERTQSIsInR5cCI6IkpXVCJ9.eyJpYXQiOjE3Njk2MDg3ODIsImlkIjoiZDUyM2I3OWEtZjA1My00M2U4LThhOGQtNjYwZTc1MmE0ZTY5IiwicmlkIjoiYTI3NDM2NWEtOWY3ZS00MTVlLTgxNTYtYzQxYzk2MWY4YTM0In0._TaT30NMCijZJhWyPmx_EGSzntWpyawyLoGh_JgASaHbrPkPNabsLsCfrArwLCCK1VBK9jE3NhSr9WLe_38gDg",
          "TURSO_LOCAL_REPLICA_PATH": "$HOME/Library/Mobile Documents/com~apple~CloudDocs/claude-setup/memory/turso-replica.db"
        },
        "description": "Knowledge graph for persistent memory (Turso-backed)"
      },
      "playwright": {
        "command": "npx",
        "args": ["-y", "@anthropic/mcp-playwright"],
        "description": "Browser automation with Playwright"
      },
      "github": {
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-github"],
        "env": {
          "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
        },
        "description": "GitHub API integration"
      },
      "brave-search": {
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-brave-search"],
        "env": {
          "BRAVE_API_KEY": "${BRAVE_API_KEY}"
        },
        "description": "Web search via Brave"
      },
      "postgres": {
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-postgres",
          "${DATABASE_URL:-postgresql://localhost/mydb}"
        ],
        "description": "PostgreSQL database access"
      },
      "resend": {
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-resend"],
        "env": {
          "RESEND_API_KEY": "${RESEND_API_KEY}"
        },
        "description": "Email sending via Resend"
      },
      "slack": {
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-slack"],
        "env": {
          "SLACK_BOT_TOKEN": "${SLACK_BOT_TOKEN}",
          "SLACK_TEAM_ID": "${SLACK_TEAM_ID}"
        },
        "description": "Slack integration"
      },
      "notion": {
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-notion"],
        "env": {
          "NOTION_API_KEY": "${NOTION_API_KEY}"
        },
        "description": "Notion integration"
      },
      "digitalocean": {
        "command": "npx",
        "args": [
          "-y",
          "@digitalocean/mcp",
          "--services",
          "apps,databases,spaces"
        ],
        "env": {
          "DIGITALOCEAN_TOKEN": "${DIGITALOCEAN_TOKEN}"
        },
        "description": "DigitalOcean App Platform, Databases, and Spaces management"
      },
      "chrome-devtools": {
        "command": "npx",
        "args": ["-y", "chrome-devtools-mcp@latest"],
        "description": "Chrome DevTools for browser automation and testing"
      },
      "google-workspace": {
        "command": "npx",
        "args": ["-y", "@presto-ai/google-workspace-mcp"],
        "description": "Gmail, Calendar, Drive, Docs, Sheets - OAuth authenticated"
      }
    }
  },
  "model": "opus",
  "spinnerVerbs": {
    "mode": "append",
    "verbs": [
      "Analyzing deal",
      "Extracting financials",
      "Scoring deal",
      "Reviewing codebase",
      "Running E2E tests",
      "Reviewing code",
      "Orchestrating project"
    ]
  }
}
