{
  "$schema": "https://claude.ai/schemas/mcp.json",
  "_comment": "Project-level MCP configuration. Copy to your project root as .mcp.json",
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "."],
      "description": "Local filesystem access scoped to project directory"
    },
    "git": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-git", "."],
      "description": "Git operations for this repository"
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      },
      "description": "GitHub API access for PRs, issues, and repo management"
    },
    "postgres": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-postgres",
        "${DATABASE_URL}"
      ],
      "description": "PostgreSQL database access - set DATABASE_URL in .env"
    }
  },
  "_usage": {
    "instructions": [
      "1. Copy this file to your project root as .mcp.json",
      "2. Remove servers you don't need",
      "3. Set environment variables in .env or your shell",
      "4. The file will be auto-loaded when Claude Code starts in this directory"
    ],
    "environment_variables": {
      "GITHUB_TOKEN": "GitHub personal access token for API access",
      "DATABASE_URL": "PostgreSQL connection string (postgres://user:pass@host:5432/db)"
    },
    "common_additions": {
      "supabase": {
        "command": "npx",
        "args": ["-y", "@supabase/mcp-server"],
        "env": {
          "SUPABASE_URL": "${SUPABASE_URL}",
          "SUPABASE_SERVICE_KEY": "${SUPABASE_SERVICE_KEY}"
        }
      },
      "redis": {
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-redis"],
        "env": {
          "REDIS_URL": "${REDIS_URL}"
        }
      },
      "sqlite": {
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-sqlite", "./data/app.db"]
      }
    },
    "permission_examples": {
      "development": {
        "allow": ["mcp__filesystem__*", "mcp__git__*"],
        "prompt": ["mcp__postgres__*"]
      },
      "production": {
        "allow": ["mcp__filesystem__read_file", "mcp__git__status"],
        "deny": ["mcp__*__write*", "mcp__*__delete*"]
      },
      "code_review": {
        "allow": [
          "mcp__filesystem__read_file",
          "mcp__git__log",
          "mcp__git__diff"
        ],
        "deny": ["mcp__*__*"]
      }
    }
  }
}
